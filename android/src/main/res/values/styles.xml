<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mihhh</item>
        <item name="colorPrimaryDark">@color/mihhh</item>
        <item name="colorAccent">@color/steelblue</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Webview" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/mihhh</item>
        <item name="colorPrimaryDark">@color/mihhh</item>
        <item name="colorAccent">@color/steelblue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Settings" parent="@android:style/Theme.Material.Light" >
    <item name="android:colorPrimary">@color/mihhh</item>
    <item name="android:colorPrimaryDark">@color/mihhh</item>
    <item name="android:colorAccent">@color/steelblue</item>
    </style>

</resources>